{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "@angular/core": [
        "node_modules/@angular/core"
      ],
      "@angular/forms": [
        "node_modules/@angular/forms"
      ]
    }
  },
  "files": [
    "./src/index.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}