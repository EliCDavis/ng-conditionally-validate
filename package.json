{
  "name": "ng-conditionally-validate",
  "version": "1.0.0",
  "description": "utility to making certain form controls validated only when certain requirements are met",
  "main": "index.js",
  "scripts": {
    "coverage": "karma start karma-coverage.conf.js --single-run",
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/ng-conditionally-validate.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ng-conditionally-validate.umd.min.js",
    "build": "cp README.md dist/README.md && npm run transpile && npm run package && npm run minify",
    "lint": "tslint ./src/**/*.ts -t verbose",
    "dev": "concurrently \"tsc -p ./tsconfig.dev.json -w\" \"karma start karma.conf.js\"",
    "test": "cp -R src test/ && tsc -p ./tsconfig.spec.json && npm run coverage"
  },
  "keywords": [
    "angular",
    "FormControl",
    "FormGroup",
    "ReactiveForms"
  ],
  "author": "EliCDavis",
  "license": "MIT",
  "devDependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.2.6",
    "@angular/compiler-cli": "^4.2.6",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@types/jasmine": "2.5.41",
    "@types/node": "^6.0.45",
    "jasmine-core": "^2.4.1",
    "json-loader": "^0.5.4",
    "karma": "1.6.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-mocha-reporter": "^2.2.0",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-remap-coverage": "^0.1.4",
    "karma-webpack": "^2.0.3",
    "marked": "^0.3.6",
    "phantomjs-prebuilt": "^2.1.7",
    "reflect-metadata": "0.1.3",
    "rollup": "^0.41.6",
    "rxjs": "^5.0.3",
    "systemjs": "^0.20.15",
    "ts-loader": "^1.0.0",
    "tslint": "^5.5.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.4.1",
    "uglify-js": "^3.0.23",
    "vrsource-tslint-rules": "^5.1.0",
    "webpack": "2.3.3",
    "zone.js": "^0.8.5"
  },
  "dependencies": {
    "concurrently": "^3.5.0"
  }
}